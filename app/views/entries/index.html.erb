<h1>Listing entries of <%= @this_user %></h1>

<table>
  <thead>
    <tr>
      <th>Feeling</th>
      <th>Blurb</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.feeling %></td>
        <td><%= entry.blurb %></td>
        <td>
          <% entry.tag_list.each do |t| %>
              <%= t %>
          <% end %>
        </td>

            <td><%= link_to 'Show', entry %></td>
         <% if can? :update, entry %>
            <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
         <% end %>
         <% if can? :destroy, entry %>
            <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>