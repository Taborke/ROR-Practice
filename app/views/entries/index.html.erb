<h1>Listing entries</h1>

<table>
  <thead>
    <tr>
      <th>Feeling</th>
      <th>Blurb</th>
      <th>Blogger</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.feeling %></td>
        <td><%= entry.blurb %></td>
        <td><%= entry.blogger.email %></td>
        <td><% entry.tags.each do |tag| %>
                <%= tag.name %>
            <% end %>
        </td>
        <td><%= link_to 'Show', entry %></td>

        <td><%= link_to 'Edit', edit_blogger_entry_path(current_blogger, entry) %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
